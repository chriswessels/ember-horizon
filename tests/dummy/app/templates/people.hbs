<h2>People</h2>

<ul>
  {{#each model as |p|}}
  <li class='people'>
    <span class="remove" onclick={{route-action 'deleteUser' p.id}}>
      âŠ—
    </span>
    <span class="name">{{p.name}}</span>
    <span class="ownedBy">
      {{#if p.owns}}
        - owns:
        {{#each p.owns as |todo|}}
          <span class="person-todo">{{todo.name}}, </span>
        {{/each}}
      {{else}}
        <span class="mute-text">(doesn't own any TODO's)</span>
      {{/if}}
      {{p.ownedBy.name}}
    </span>
  </li>
  {{/each}}
</ul>


<p>
  <br>
</p>
<h3>Add Person</h3>
<p>
  <form class="user-form">
    <input id='addUser' type='text' name='name' />
    <button onclick={{route-action 'addUser'}}> Add </button>
  </form>
</p>
